{
  "name": "npm-puckage-template",
  "version": "1.0.0",
  "description": "hello-world nodejs package ",
  "author": "abyssparanoia",
  "license": "MIT",
  "files": [
    "cjs",
    "esm"
  ],
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "scripts": {
    "build": "yarn clean && yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc --project . --module commonjs --outDir ./cjs",
    "build:esm": "tsc --project . --module es2015 --outDir ./esm",
    "lint": "eslint -c ./.eslintrc.json './lib/**/*.ts' --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "yarn test && yarn build",
    "clean": "rimraf esm cjs"
  },
  "devDependencies": {
    "@types/jest": "26.0.24",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "11.0.0",
    "pre-commit": "1.2.2",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "typescript": "4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "git add"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  }
}
