{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2018"],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "newLine": "lf"
  },
  "include": ["lib"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
